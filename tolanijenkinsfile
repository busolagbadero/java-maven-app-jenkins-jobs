@Library('jenkins-shared-library')_

pipeline {
    agent any
    tools {
        maven 'maven-b'
    }

    stages {

        stage('Init') {
            steps {
                script {
                    // Load the Groovy script from the library
                    gv = load "script.groovy"
                    echo 'Loading Groovy script'
                }
            }
        }

        stage('Build Jar') {
            steps {
                script {
                    // Call the buildJar function from the loaded script
                    gv.buildJar()
                }             
            }
        }

        stage('Build Image') {
            steps {
                script {
                    // Call the buildImage function from the library
                    buildImage()
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run, regardless of the pipeline result.'
        }

        success {
            echo 'The pipeline has succeeded!'
        }

        failure {
            echo 'The pipeline has failed.'
        }
    }
}
