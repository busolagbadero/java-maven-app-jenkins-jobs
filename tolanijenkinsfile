def gv
pipeline {
    agent any
    tools {
        maven 'maven-b'
    }

    stages {

        stage('init') {
            steps {
                script {
                    gv = load "bubu.groovy"
                }
                echo 'loading groovy script'
                
            }
        }
        stage('Build Jar') {
            steps {
                script {
                    gv.buildJar()
                }             
            }
        }

        stage('Build Image') {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run, regardless of the pipeline result.'
        }

        success {
            echo 'The pipeline has succeeded!'
        }

        failure {
            echo 'The pipeline has failed.'
        }
    }
}
